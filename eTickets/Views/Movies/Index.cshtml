@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Movies</h2>
    
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-controller="Movies" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add Movie
        </a>
    }
</div>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6">
            <div class="card h-100 shadow-sm border-0 rounded-4">
                <!-- Image -->
                <img src="@item.ImageURL" class="card-img-top rounded-top-4" alt="@item.Name" style="height:220px; object-fit:cover;">

                <!-- Card Body -->
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">
                        @item.Name
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                             <a class="float-end text-secondary" 
                                asp-controller="Movies" 
                                asp-action="Edit" 
                                asp-route-id="@item.Id" 
                                style="cursor:pointer;">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        }
                    </h5>

                    <p class="card-text text-truncate" style="max-height:50px;">@item.MainDescription</p>
                    @if (!string.IsNullOrEmpty(item.Charity))
                    {
                        <p class="card-text"><b>Charity: </b>@item.Charity</p>
                    }
                    <p class="card-text mb-1"><b>Cinema: </b>@item.Cinema.Name</p>
                    <p class="card-text mb-1"><b>Category: </b>@item.MovieCategory</p>
                    <p class="card-text mb-1"><b>Start Date: </b>@item.StartDate.ToString("dd MMM yy")</p>
                    <p class="card-text mb-2"><b>End Date: </b>@item.EndDate.ToString("dd MMM yy")</p>

                    <p class="card-text mt-auto">
                        <b>Status: </b>
                        @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                        {
                            <span class="badge bg-success text-white">AVAILABLE</span>
                        }
                        else if (DateTime.Now > item.EndDate)
                        {
                            <span class="badge bg-danger text-white">EXPIRED</span>
                        }
                        else
                        {
                            <span class="badge bg-primary text-white">UPCOMING</span>
                        }
                    </p>
                </div>

                <div class="card-footer bg-white border-top-0 d-flex gap-2">
                    @if (!User.IsInRole("Admin"))
                    {
                        <button class="btn btn-success flex-fill rounded-pill" @(DateTime.Now > item.EndDate ? "disabled" : "")>
                            Add to Cart $ @item.Price
                        </button>
                    }
                    <a class="btn btn-outline-primary flex-fill rounded-pill" 
                       asp-controller="Movies" 
                       asp-action="Details" 
                       asp-route-id="@item.Id">
                        Show Details
                    </a>
                </div>

            </div>
        </div>
    }
</div>
