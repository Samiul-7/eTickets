@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "List of all users";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-10">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="bi bi-people" style="font-size:2.5rem; color:#0d6efd;"></i>
                    <h4 class="mt-2">All Registered Users</h4>
                    <p class="text-muted">Here is the list of all users in the system</p>
                </div>

                <table class="table table-hover align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th><i class="bi bi-person-badge"></i> Full Name</th>
                            <th><i class="bi bi-envelope"></i> Email</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center mt-3">
                        <i class="bi bi-info-circle"></i> No users found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .btn-sm {
        padding: 5px 10px;
        border-radius: 12px;
    }
</style>
