@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .sidebar {
            background-color: #2c3e50;
            min-height: 100vh;
            padding-top: 20px;
            color: white;
        }
        .sidebar a {
            color: green;
            text-decoration: none;
            padding: 10px 20px;
            display: block;
            border-radius: 8px;
            margin: 4px 0;
        }
        .sidebar a:hover {
            background-color: #34495e;
        }
        .content-area {
            padding: 20px;
        }
        footer {
            background-color: #2c3e50;
            color: white;
            padding: 15px 0;
            position: sticky;
            bottom: 0;
            margin-top: auto;
        }
        .search-bar {
            display: flex;
            gap: 5px;
        }
    </style>
</head>
<body class="d-flex flex-column">

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
    <h4 class="px-3">🎬 eTickets</h4>
    <a asp-controller="Movies" asp-action="Index"><i class="bi bi-film"></i> Movies</a>

    @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels"></i> Cinema Hall</a>
        <a asp-controller="Producers" asp-action="Index"><i class="bi bi-headset"></i> Producers</a>
        <a asp-controller="Actors" asp-action="Index"><i class="bi bi-person-square"></i> Actors</a>
    }

    <hr class="bg-light">

    <!-- 🔎 Search -->
    <form asp-controller="Movies" asp-action="Filter" class="search-bar px-3">
        <input name="searchString" type="text" class="form-control" placeholder="Search movies...">
        <button class="btn btn-warning"><i class="bi bi-search"></i></button>
    </form>

    <hr class="bg-light">

    <!-- 🛒 Shopping Cart Highlight -->
    <div class="px-3 mb-3">
        <div class="card bg-dark text-white shadow-sm">
            <div class="card-body p-3 text-center">
                <h6 class="mb-2"><i class="bi bi-cart3"></i> Shopping Cart</h6>
                <div>
                    @await Component.InvokeAsync("ShoppingCartSummary")
                </div>
                <a asp-controller="Orders" asp-action="ShoppingCart" class="btn btn-warning btn-sm mt-2 w-100 rounded-pill">
                    View Cart
                </a>
            </div>
        </div>
    </div>


            <hr class="bg-light">
            <partial name="_Identity.cshtml" />
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 content-area">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <div>
            &copy; 2025 - eTickets | 
            <a href="#" class="text-light"><i class="bi bi-facebook"></i></a>
            <a href="#" class="text-light ms-2"><i class="bi bi-instagram"></i></a>
            <a href="#" class="text-light ms-2"><i class="bi bi-linkedin"></i></a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>