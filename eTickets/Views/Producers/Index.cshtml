@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List of Producers";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Producers</h2>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card shadow-sm h-100 producer-card">
                    <div class="card-body text-center">
                        <img src="@item.ProfilePictureURL" alt="@item.FullName" 
                             class="rounded-circle mb-3 border producer-img" />
                        <h5 class="card-title">@item.FullName</h5>
                        <p class="card-text text-muted">@item.Bio</p>
                    </div>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <div class="card-footer d-flex justify-content-center gap-2">
                            <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a class="btn btn-danger btn-sm text-white" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        @await Html.PartialAsync("_CreateItem", "Producers")
    </div>
</div>

<style>
    .producer-card {
        border-radius: 16px;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s;
    }

    .producer-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 15px rgba(0,0,0,0.15);
    }

    .producer-img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        box-shadow: 0 3px 8px rgba(0,0,0,0.2);
    }

    .card-title {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 0.9rem;
    }

    .btn-sm {
        border-radius: 12px;
        padding: 6px 12px;
    }
</style>
